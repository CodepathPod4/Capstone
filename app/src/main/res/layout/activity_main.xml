<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/PartyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/SadButton"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/SadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sad"
        app:layout_constraintTop_toTopOf="@id/PartyButton"
        app:layout_constraintStart_toEndOf="@id/PartyButton"
        app:layout_constraintEnd_toStartOf="@id/WorkoutButton"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/WorkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout"
        app:layout_constraintStart_toEndOf="@id/SadButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/PartyButton"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/ChillButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chill"
        tools:layout_editor_absoluteX="95dp"
        app:layout_constraintTop_toBottomOf="@id/PartyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/StudyButton"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/StudyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ChillButton"
        app:layout_constraintTop_toTopOf="@id/ChillButton"

        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif-monospace"
        android:text="App Name!!"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="235dp"
        app:layout_constraintTop_toBottomOf="@id/ChillButton"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>